{
  "name": "palindrome",
  "version": "1.0.0",
  "description": "A palindrome checker written in typescript.",
  "author": "typedin",
  "main": "./lib/index.js",
  "bin": {
    "palindrome": "./lib/index.js"
  },
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "create": "npm run build && npm run test",
    "build": "tsc -p .",
    "local": "sudo npm i -g && palindrome",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "test": "jest",
    "palindrome": "./lib/index.js"
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/cli-color": "^2.0.1",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "@types/yargs": "^17.0.7",
    "babel-jest": "^27.4.2",
    "jest": "^27.4.3",
    "tslint": "^5.12.1"
  },
  "dependencies": {
    "cli-color": "^2.0.1",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^3.9.10",
    "yargs": "^17.3.0"
  }
}
